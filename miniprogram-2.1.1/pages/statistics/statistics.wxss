.container {
  padding: 20rpx;
  background-color: #FFF5E6;
  min-height: 100vh;
}

.filters {
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.date-pickers {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.picker {
  padding: 10rpx 20rpx;
  background-color: #f8f8f8;
  border: 1rpx solid #ddd;
  border-radius: 5rpx;
}

.subject-and-button {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.subject-picker {
  flex: 1;
  margin-right: 20rpx;
}

.confirm-btn {
  padding: 10rpx 30rpx;
  background-color: #1aad19;
  color: #ffffff;
  border: none;
  border-radius: 5rpx;
}

.chart-container {
  width: 95%;
  margin: 20rpx auto;
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.chart {
  width: 100%;
  height: 500rpx;
}