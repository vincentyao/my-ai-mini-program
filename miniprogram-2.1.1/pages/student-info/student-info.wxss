.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.form-scroll {
  flex: 1;
  padding: 16rpx;
  padding-bottom: 80rpx;
}

.form-top-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.form-top-row .form-card {
  flex: 1;
}

.form-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 16rpx;
}

.form-card {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.top-card {
  height: auto;
}

.form-label {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.form-label.optional {
  color: #666;
  font-weight: normal;
}

.required {
  color: #ff4d4f;
  margin-left: 4rpx;
}

.picker {
  width: 135%;
  padding: 16rpx;
  background-color: #f8f8f8;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #333;
  display: flex;
  align-items: center;
  height: 56rpx;
}

.input {
  width: 80%;
  padding: 16rpx;
  background-color: #f8f8f8;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #333;
}

.picker-placeholder {
  color: #999;
}

.input.optional {
  background-color: #fafafa;
}

.button-container {
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
  width: auto;
}

.save-btn {
  background-color: #1aad19;
  color: #ffffff;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(26, 173, 25, 0.2);
  transition: all 0.3s;
}

.save-btn:active {
  opacity: 0.8;
  transform: translateY(2rpx);
}

@media screen and (min-width: 375px) {
  .form-scroll {
    padding: 20rpx;
    padding-bottom: 100rpx;
  }

  .form-top-row {
    gap: 20rpx;
    margin-bottom: 20rpx;
  }

  .form-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 20rpx;
  }

  .form-card {
    padding: 20rpx;
  }

  .form-label {
    font-size: 26rpx;
    margin-bottom: 10rpx;
  }

  .picker, .input {
    padding: 18rpx;
    font-size: 26rpx;
  }

  .picker {
    height: 60rpx;
  }

  .save-btn {
    font-size: 36rpx;
    padding: 24rpx 48rpx;
  }
}