<view class="container">
  <view class="form-group">
    <view class="form-label">Education Level</view>
    <picker bindchange="onEducationLevelChange" value="{{index}}" range="{{educationLevels}}">
      <view class="picker {{!selectedEducationLevel ? 'picker-placeholder' : ''}}">
        {{selectedEducationLevel || 'Please select'}}
      </view>
    </picker>

    <view class="form-label" wx:if="{{showGrades}}">Grade</view>
    <picker wx:if="{{showGrades}}" bindchange="onGradeChange" value="{{index}}" range="{{grades[selectedEducationLevel]}}">
      <view class="picker {{!selectedGrade ? 'picker-placeholder' : ''}}">
        {{selectedGrade || 'Please select'}}
      </view>
    </picker>

    <view class="form-label">Region</view>
    <picker bindchange="onRegionChange" value="{{index}}" range="{{regions}}">
      <view class="picker {{!selectedRegion ? 'picker-placeholder' : ''}}">
        {{selectedRegion || 'Please select'}}
      </view>
    </picker>

    <view class="form-label">Textbook Version</view>
    <picker bindchange="onTextbookVersionChange" value="{{index}}" range="{{textbookVersions}}">
      <view class="picker {{!selectedTextbookVersion ? 'picker-placeholder' : ''}}">
        {{selectedTextbookVersion || 'Please select'}}
      </view>
    </picker>

    <view class="form-label">Student Name</view>
    <input class="input" placeholder="Enter student name" bindinput="onStudentNameInput" value="{{studentName}}" />
  </view>

  <button class="save-btn" bindtap="onSave">Save</button>
</view>