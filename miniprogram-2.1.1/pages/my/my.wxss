.container {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.username {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.stats-container {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.stats-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.stats-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stats-value {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

.stats-rate {
  font-size: 22rpx;
  color: #1aad19;
  margin-top: 4rpx;
}

.action-list {
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.action-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.action-item:last-child {
  border-bottom: none;
}

.action-text {
  font-size: 28rpx;
  color: #333;
}

.action-arrow {
  font-size: 36rpx;
  color: #999;
}

.logout-btn {
  margin-top: 40rpx;
  background-color: #ff4d4f;
  color: white;
  padding: 20rpx 0;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  width: 80%;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(255, 77, 79, 0.2);
  transition: opacity 0.3s;
}

.logout-btn:active {
  opacity: 0.8;
}

.not-logged-in {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.not-logged-in text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.not-logged-in button {
  background-color: #1aad19;
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
}