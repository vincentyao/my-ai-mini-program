<view class="container" wx:if="{{question}}">
  <view class="question">{{question.title}}</view>
  <view class="options">
    <view class="option {{selectedOption === item[0] ? 'selected' : ''}}"
          wx:for="{{options}}" 
          wx:key="index" 
          bindtap="onOptionTap" 
          data-option="{{item[0]}}">
      {{item}}
    </view>
  </view>
  <view class="explanation" wx:if="{{selectedOption}}">
    {{question.explanation}}
  </view>
</view>