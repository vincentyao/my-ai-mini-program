.container {
  padding: 20px;
}

.question {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 20px;
}

.options {
  display: flex;
  flex-direction: column;
}

.option {
  padding: 10px;
  margin-bottom: 10px;
  background-color: #f0f0f0;
  border-radius: 5px;
}

.option:active {
  background-color: #e0e0e0;
}

.option.selected {
  background-color: #d0d0d0;
}

.explanation {
  margin-top: 20px;
  padding: 10px;
  background-color: #e8f0fe;
  border-radius: 5px;
  font-size: 14px;
}