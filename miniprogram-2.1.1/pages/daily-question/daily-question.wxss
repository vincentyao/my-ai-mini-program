.container {
  padding: 20px;
}

.question {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 20px;
}

.options {
  display: flex;
  flex-direction: column;
}

.option {
  padding: 10px;
  margin-bottom: 10px;
  background-color: #f0f0f0;
  border-radius: 5px;
}

.option:active {
  background-color: #e0e0e0;
}