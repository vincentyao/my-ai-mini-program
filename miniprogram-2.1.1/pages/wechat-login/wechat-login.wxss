.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.login-box {
  width: 100%;
  max-width: 680rpx;
  background-color: white;
  border-radius: 24rpx;
  padding: 80rpx 60rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 60rpx;
}

.title {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 80rpx;
  text-align: center;
}

.login-btn {
  width: 100%;
  background-color: #07C160;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 0;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s ease;
}

.login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(7, 193, 96, 0.3);
}

.wechat-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 12rpx;
}