.container {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.question-list {
  background-color: #f9f9f9; /* Lighter shade of grey for a smoother transition */
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05); /* Softer shadow for subtler effect */
  flex-grow: 1;
  overflow-y: auto;
}

.question-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #e0e0e0; /* Slightly darker border for subtle separation */
  font-size: 28rpx;
  color: #333;
  background-color: #ffffff; /* White background for each item */
  margin-bottom: 10rpx; /* Space between items */
  border-radius: 8rpx; /* Rounded corners for each item */
}

.question-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.no-favorites {
  padding: 40rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}